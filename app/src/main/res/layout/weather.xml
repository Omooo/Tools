<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@mipmap/p2"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:id="@+id/editText1"
        android:layout_marginTop="50dp"
        android:hint="请输入城市"
        android:textSize="25sp"
        android:textColorHint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="查询"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="#FF9999"
        android:onClick="SearchWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <!--<ImageView-->
                <!--android:id="@+id/weather_image1"-->
                <!--android:src="@mipmap/t1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_date1"
                android:textColor="#66CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_state1"
                android:textColor="#33CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_temp1"
                android:textSize="20sp"
                android:textColor="#339999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_day1"
                android:textSize="20sp"
                android:textColor="#66CC99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <!--<ImageView-->
                <!--android:id="@+id/weather_image2"-->
                <!--android:src="@mipmap/t2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_date2"
                android:textColor="#66CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_state2"
                android:textColor="#33CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_temp2"
                android:textColor="#339999"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_day2"
                android:textColor="#66CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <!--<ImageView-->
                <!--android:id="@+id/weather_image3"-->
                <!--android:src="@mipmap/t3"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_date3"
                android:textColor="#66CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_state3"
                android:textColor="#33CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/weather_temp3"
                android:textColor="#339999"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/weather_day3"
                android:textColor="#66CC99"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginTop="-50dp"
        android:id="@+id/mLineChar"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        android:text="三日平均天气走势图"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#66CCCC"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>