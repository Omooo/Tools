<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FF6666"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/title_image"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="chooseCity"
            android:src="@mipmap/weather_home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/title_city"
            android:text="浦东新区"
            android:textSize="20sp"
            android:textColor="@color/colorTextWrite"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title_time"
            android:text="20:34"
            android:textSize="20sp"
            android:textColor="@color/colorTextWrite"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:text="10℃"
                android:textColor="@color/colorTextWrite"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:text="晴"
                android:textColor="@color/colorTextWrite"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#8000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="预报"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="20sp" />
                <LinearLayout
                    android:id="@+id/layout_forecast"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8000"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#8000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="空气质量"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="20sp" />
                <RelativeLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_aqi"
                        android:text="54"
                        android:textSize="40sp"
                        android:textColor="@color/colorTextWrite"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_pm"
                        android:text="38"
                        android:textSize="40sp"
                        android:textColor="@color/colorTextWrite"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="20sp"
                        android:text="AQI指数"
                        android:textColor="@color/colorTextWrite"
                        android:layout_marginStart="40dp"
                        android:layout_below="@+id/tv_aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="PM 2.5指数"
                        android:textSize="20sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/colorTextWrite"
                        android:layout_below="@+id/tv_pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_marginBottom="15dp"
                android:background="#8000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="生活建议"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextWrite"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_suggestion1"
                    android:textColor="@color/colorTextWrite"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦溜了溜了啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_suggestion2"
                    android:textColor="@color/colorTextWrite"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦溜了溜了啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_suggestion3"
                    android:textColor="@color/colorTextWrite"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦溜了溜了啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>