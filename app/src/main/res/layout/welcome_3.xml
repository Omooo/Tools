<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#FF0033"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_icon_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="关于"
        android:src="@mipmap/welcome_3"
        android:tint="@android:color/white"/>

    <TextView
        android:id="@+id/welcome_text_31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="轻巧不失优雅"
        android:textColor="@android:color/white"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/welcome_text_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/welcome_icon_3"
        android:layout_below="@id/welcome_text_31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Elegance"
        android:textColor="@android:color/white"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/welcome_text_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="· · - ·"
        android:textColor="@android:color/white"
        android:textSize="30dp"/>

</RelativeLayout>